# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'KinescopeExample' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for KinescopeExample
  pod 'ReactiveDataDisplayManager', :git => 'https://github.com/surfstudio/ReactiveDataDisplayManager', :commit => 'b5b0f360ecfad8ed892a53c431ce1f1baad82dfe'
  pod 'KinescopeSDK', :path => '../'

end

# Temporary hack before release of Cocoapods 1.10 https://realm.io/docs/swift/latest/#cocoapods
post_install do |installer|
     installer.pods_project.targets.each do |target|
         target.build_configurations.each do |config|
             config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
             config.build_settings['EXCLUDED_ARCHS[sdk=watchsimulator*]'] = 'arm64'
             config.build_settings['EXCLUDED_ARCHS[sdk=appletvsimulator*]'] = 'arm64'
         end
     end
end
